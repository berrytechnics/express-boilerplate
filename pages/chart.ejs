<%- include('partials/nav') %>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card h-100">
                <div class="card-header">
                    <h1>Sample 30-day Sales Chart</h1>
                </div>
                <div class="card-body">
                    <canvas id="chartCtx" class="h-100"></canvas>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/scripts') %>
<script>
    let dateLabels = Array.from(Array(31).keys()); 
    dateLabels.shift();
      new Chart(document.getElementById("chartCtx"), {
        type: 'line',
        data: {
          labels: dateLabels,
          datasets: [
            { 
              data: [4050,5000,6700,5070,7000,8070,6900,6555,5900,7540,4050,5000,6700,5070,7000,8070,6900,6555,5900,7540,4050,5000,6700,5070,7000,8070,6900,6555,5900,7540],
              label: "Sales",
              borderColor: "grey",
              fill: false
            }
          ]
        },
        options: {
          title: {
            display: true,
            text: 'World population per region (in millions)'
          }
        }
      });
</script>
